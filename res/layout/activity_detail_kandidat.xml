<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKandidat" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F2F2"
		    android:orientation="vertical"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin" >
		    
            <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|center"
		        android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
		        android:background="@drawable/background_item"
		        android:orientation="vertical">
		    </LinearLayout>
		    
            <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|center"
		        android:layout_marginTop="10dp"
		        android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
		        android:background="@drawable/background_item"
		        android:orientation="vertical">
		
		        <TextView
		            android:id="@+id/namaKandidat"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="20sp" />
		
		        <TextView
		            android:id="@+id/lahirKandidat"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="14sp" />

		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|center"
		        android:layout_marginTop="10dp"
		        android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
		        android:background="@drawable/background_item"
		        android:orientation="vertical">
		
		        <TextView
		            android:id="@+id/titleBiografi"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="Biografi Singkat" />
		
		        <TextView
		            android:id="@+id/textBiografi"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="14sp" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|center"
		        android:layout_marginTop="10dp"
		        android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
		        android:background="@drawable/background_item"
		        android:orientation="vertical">
		
		        <TextView
		            android:id="@+id/titlePendidikan"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="Riwayat Pendidikan" />
		
		        <TextView
		            android:id="@+id/textPendidikan"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="14sp" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|center"
		        android:layout_marginTop="10dp"
		        android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
		        android:background="@drawable/background_item"
		        android:orientation="vertical">
		
		        <TextView
		            android:id="@+id/titlePekerjaan"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="Riwayat Pekerjaan" />
		
		        <TextView
		            android:id="@+id/textPekerjaan"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="14sp" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|center"
		        android:layout_marginTop="10dp"
		        android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
		        android:background="@drawable/background_item"
		        android:orientation="vertical">
		
		        <TextView
		            android:id="@+id/titleOrganisasi"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Riwayat Organisasi"
		            android:textSize="20sp" />
		
		        <TextView
		            android:id="@+id/textOrganisasi"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="14sp" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|center"
		        android:layout_marginTop="10dp"
		        android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
		        android:background="@drawable/background_item"
		        android:orientation="vertical">
		
		        <TextView
		            android:id="@+id/titlePenghargaan"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Riwayat Penghargaan"
		            android:textSize="20sp" />
		
		        <TextView
		            android:id="@+id/textPenghargaan"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textSize="14sp" />
		    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
