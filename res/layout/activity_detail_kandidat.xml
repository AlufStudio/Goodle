                android:text="Lahir : Indonesia" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Lahir : Indonesia" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Lahir : Indonesia" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
